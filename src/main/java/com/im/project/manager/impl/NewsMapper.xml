  </resultMap>
 <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select  
    articleNews_id,title,cont,author,date
    from article_news
    where type=1 and articleNews_id = #{id,jdbcType=INTEGER}
  </select>
  <select id="findAll" resultMap="BaseResultMap" parameterType="java.util.Map">
  select
  articleNews_id,title,author,date,summary,releaser
  from article_news
  where type=1 limit #{pageNow} ,#{pageSize}
  </select>
  <insert id="insert" parameterType="com.im.project.model.News" >
    insert into article_news (articleNews_id,title,cont,date,author,releaser,summary,type,picture)
    values (#{id,jdbcType=INTEGER}, #{title,jdbcType=VARCHAR}, #{content},
    #{date,jdbcType=VARCHAR}, #{author,jdbcType=VARCHAR}, #{releaser,jdbcType=VARCHAR}, 
    #{summary,jdbcType=VARCHAR},#{type,jdbcType=INTEGER},#{pictureId,jdbcType=INTEGER})
  </insert>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from article_news
    where articleNews_id = #{id,jdbcType=INTEGER}
  </delete>
  <update id="updateByPrimaryKey" parameterType="com.im.project.model.News" >
    update article_news
    <set >
      <if test="title != null" >
        title = #{title,jdbcType=VARCHAR},
      </if>
      <if test="content != null" >
        cont =  #{content},
      </if>
      <if test="author != null" >m  
        author = #{author,jdbcType=VARCHAR},
      </if>
      <if test="releaser != null" >
        releaser = #{releaser,jdbcType=VARCHAR},
      </if>
      <if test="summary != null" >
        summary = #{summary,jdbcType=VARCHAR},
      </if>
        <if test="pictureId != null" >
        picture = #{pictureId,jdbcType=INTEGER}
      </if>
    </set>
    where articleNews_id = #{id,jdbcType=INTEGER}
  </update>
 
  
</mapper>